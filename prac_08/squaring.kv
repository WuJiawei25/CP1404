BoxLayout:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    BoxLayout:  # Top section (horizontal layout)
        orientation: 'horizontal'
        spacing: 10

        TextInput:
            id: input_number
            text: '7'
            font_size: 48
            multiline: False

        Button:
            text: 'Square'
            on_press: app.handle_calculate(input_number.text)

        Label:
            id: output_label
            font_size: 48
            color: (1, 0.4, 0.7, 1)  # Pink (RGBA)

    BoxLayout:  # Bottom section with one label
        size_hint_y: 0.3
        Label:
            text: 'Enter a number and press "Square"'
            font_size: 16